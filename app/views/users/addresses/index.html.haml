.container.mt-4
  .d-flex.justify-content-between.align-items-center.mb-3
    %h1.mb-0 住所一覧
    = link_to '新規住所追加', new_users_address_path, class: 'btn btn-primary'

  .card.shadow-sm
    .card-body.p-0
      %table.table.table-hover.mb-0
        %thead
          %tr
            %th 郵便番号
            %th 都道府県
            %th 市区町村
            %th 番地
            %th 電話番号
            %th.text-center 操作
        %tbody
          - @addresses.each do |address|
            %tr
              %td= address.postal_code
              %td= address.prefecture
              %td= address.city
              %td= address.street
              %td= address.phone_number
              %td.text-center
                = link_to '編集', edit_users_address_path(address), class: 'btn btn-sm btn-outline-secondary me-2'
                = link_to '削除', users_address_path(address), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-sm btn-outline-danger'

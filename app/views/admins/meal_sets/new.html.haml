.container.mt-4
  %h1.mb-4 食材セット登録
  = simple_form_for @meal_set, url: admins_meal_sets_path, html: { class: 'needs-validation' } do |f|
    = render 'form', f: f, meal_set: @meal_set
    .mt-4.d-flex.justify-content-end
      = f.button :submit, '更新する', class: 'btn btn-primary'
  = link_to '一覧に戻る', admins_root_path, class: 'btn btn-secondary mt-3'

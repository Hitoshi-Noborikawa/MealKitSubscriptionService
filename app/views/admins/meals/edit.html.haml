.container.mt-4
  %h1.mb-4 食材登録
  = simple_form_for @meal, url: admins_meal_path(@meal), method: :patch do |f|
    = render 'form', f: f, meal: @meal
    .mt-4.d-flex.justify-content-end
      = f.button :submit, '更新する', class: 'btn btn-primary'
  = link_to '一覧に戻る', admins_root_path, class: 'btn btn-link mt-3'
